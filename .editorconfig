root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2

[nodemon.json]
insert_final_newline = false

[ot_build]
insert_final_newline = false

[Makefile]
indent_style = tab

[*.{js,json,coffee,less,sass,scss,css,rb}]
indent_size = 2

[node_modules/**.js]
codepaint = false
